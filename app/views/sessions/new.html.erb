<h1>Login</h1>

<section style="width: 50%; padding: 50px; border: 3px double grey; border-radius: 10px; background-image: url('https://www.transparenttextures.com/patterns/wood-pattern.png')">
  <%= form_tag '/login' do %>
    <div class="form-group">
      <%= label_tag :email, "E-mail:", class: "col-md-4 text-left", style: "padding: 0" %>
      <div class="col-md-8">
        <%= text_field_tag :email %>
      </div>
    </div>
    
    <div class="form-group">
      <%= label_tag :password, "Password:", class: "col-md-4 text-left", style: "margin: 10px 0; padding: 0" %>
      <div class="col-md-8" style="margin: 10px 0" >
      <%= password_field_tag :password %>
      </div>
    </div>

    <%= submit_tag "Submit", class: "btn btn-default btn-primary" %>
  <% end %>
</section>